<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Assuming a Material Components NoActionBar style. -->
    <style name="Theme.JustPatience" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Window background for the Activity -->
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- REQUIRED FIX: Popup Overlay for Toolbar -->
    <!-- Ensures action menu items (like the settings gear or text) have white/light text color, suitable for a dark toolbar background. -->
    <style name="Theme.JustPatience.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Optional: Full Screen No Action Bar style if needed -->
    <style name="Theme.JustPatience.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>